.new-photo
  display: inline-block
  overflow: hidden
  position: relative
  margin-top:15px
  input[name="add-photo"]
    background: #395
    width: 140px
    border: none
    border-radius: 3px
    padding: 5px 0
    font-size: 1.3em
    text-align: center
    color: #fbfbfb
  input[name="add-photo-url"]
    font-size: 1.3em
    padding: 3px 5px
    width: 300px
    margin-right: 5px
  input[name="new-photo"]
    display: block
    min-height: 100%
    min-width: 100%
    opacity: 0
    position: absolute
    right: 0
    top: 0
  input[type="button"].disabled
    background-color: #999
    text-decoration: none
    border: none
    color: #fbfbfb
  
.photo-list
  margin-top:15px
  font-size: 1.3em
  width: 100%

.photo
  position: relative
  display: inline-block
  width: 23%
  height: auto
  margin: 0 2% 10px 0
  overflow: hidden
  .photo-sort
    position: absolute
    top: 0
    left: 0
    width: 18px
    height:18px
    background-color: #777
    opacity: 0.75
    text-align: center
    color: #fbfbfb
    font-size: 0.9em
    line-height: 1.5em
  img
    width: 100%
  
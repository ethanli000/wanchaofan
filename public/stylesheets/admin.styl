@import 'includes/global'

/*
 * login panel
 */
.login-form
  position: relative
  display: inline-block
  vertical-align: middle
  input[name="user"], input[name="pass"]
    display: block
    width: 180px
    padding: 10px 5px
    margin-bottom: 5px
  input[name="login"]
    width: 194px
    height: 32px
    color: #333
    font-size: 1.5em
    text-transform: uppercase
    margin-top: 5px
  .message
    position: absolute
    width: 100%
    bottom: -20px
    color: #A11
    font-size: 1.3em
    text-align: center

li.logout
  margin-top: 25px

.admin-title
  display: inline-block
  margin: 50px 0 50px 10px
  font-size: 2em
  line-height: 2em

.error-message
  margin: 15px 0 0 0
  color: #A11
  font-size: 1.2em

/*
 * info panel
 */
.info-form
  margin-left: 10px
  label
    display:block
    font-size: 1.3em
    margin-bottom: 5px
  input[type="text"]
    display:block
    width:200px
    height:20px
    margin-bottom: 10px
    font-family: inherit
  textarea
    display:block
    width:500px
    height:300px
    margin-bottom:10px
  input[type="submit"]
    width: 100px
    height:20px
    font-size: 1.3em
    margin-bottom: 10px

/*
 * series panel
 */
.series-form, .photo-form
  margin-left: 10px
  width: 800px
  max-width: 95%
  margin-right: 5%
  position: relative

.series, .new-series, .edit-series
  position: relative
  display: block
  overflow: hidden
  width: auto
  margin-bottom: 3px
  span.name
    display: inline-block
    font-size: 1.6em
    line-height: 1.4em
    padding: 7px 1%
    cursor: pointer
  input[type="text"]
    width: 98%
    border: none
    padding: 6px 1% 5px 1%
    font-size: 1.6em
    font-family: inherit
  input[type="button"]
    position: absolute
    top: 7px
    right: 5px
    display: inline-block
    padding: 4px 5px
    font-size: 1.3em
    cursor: pointer
    -moz-border-radius: 2px
    border-radius: 2px
  input[type="button"].disabled
    background-color: #999
    text-decoration: none
    border: none
    color: #fbfbfb

.new-series
  margin-bottom: 10px

.series
  a.photo_count
    display: inline-block
    width: 22px
    height: 14px
    padding: 4px 0px 4px 0px
    -moz-border-radius: 11px
    -webkit-border-radius: 11px
    border-radius: 11px
    background: #F55
    color: #fbfbfb
    font-size: 1.2em
    line-height: 1.2em
    text-decoration: none
    text-align: center
  input[name="delete"]
    background-color: #A33
    text-decoration: none
    border: none
    color: #fbfbfb
  input[name="show"]
    right: 70px
    background-color: #49D
    text-decoration: none
    border: none
    color: #fbfbfb
  input[name="hide"]
    right: 70px
    background-color: #fbfbfb
    text-decoration: none
    border: solid 1px #49D
    padding: 3px 4px
    color: #49D

.edit-series
  input[name="save"]
    right: 28px
    background-color: #395
    text-decoration: none
    border: none
    color: #fbfbfb
  input[name="cancel"]
    background-color: #AAA
    text-decoration: none
    border: none
    color: #fbfbfb

.new-series
  //border: solid 1px #151
  margin-top: 10px
  input[name="add"]
    background-color: #CB2
    text-decoration: none
    border: none
    color: #fbfbfb

/*
 * series photo panel
 */
.series-title
  padding: 3px 0
  font-size: 20px
  a
    text-decoration: none
    color: inherit

@import 'includes/init'

div,p,h1
  margin:0
  padding:0

html,body
  margin:0
  padding:0
  height: 100%
  
body
  text-align: center
  font: 10px $contentFont
  background-color: $colorW1
  color: $colorB1
  a
    //cursor: url('/images/icon/location-arrow-outline.svg'), pointer

.grand-container
  display: inline-block
  width: 100%
  min-width: $globalMinWidth
  height: 100%
  max-height: 100% !important
  min-height: 100% !important
  vertical-align: middle
  .verticaler
    display: inline-block
    vertical-align: middle
    height: 100%

.mobile-menu
  position: absolute
  z-index: 100
  display: none
  top: 50px
  left: 20px
  width: 30px
  height: 30px
  background: url('/images/icon/menu.svg')
  background-size: 100% 100%

.side-container
  float: left
  position: relative
  width: $sideContainerWidth
  height: 100%
  text-align: right

#logo
  margin: 50px $sideMenuMarginRight 50px 0
  a
    font-size: 2em
    line-height: 2em
    color: inherit
    text-decoration: none
        
#side-menu
  ul
    margin: 0
    padding: 0
    margin-left: 10px
    list-style-type: none
    li
      line-height: 1.6em
      margin-bottom: 5px
    li a
      display:block
      width: auto
      padding: 2px $sideMenuMarginRight 2px 0

      font-size: 1.4em
      text-decoration: none
      color: $sideMenuTextColor
      &:hover
        color: $colorB2
    li.selected a
      color: $colorB2
    li.bio
      margin-top: 25px
  
.main-container
  position: relative
  min-width: $MainContainerMinWidth
  margin-left: $sideContainerWidth
  height: 100%
  text-align: left
  
/*
 * assistant css
 */
.clearfix:after
  content: "."
  visibility: hidden
  display: block
  height: 0
  clear: both

/*
 * no data
 */
.no-data
  vertical-align: middle
  display: inline-block
  width: 100%
  text-align: center
  font-size: 5em
  color: $colorB2
  opacity: 0.5

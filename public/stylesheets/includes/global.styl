$contentFont = 'Lucida Grande', 'Lucida Sans Unicode', 'Lucida Sans', Geneva, Verdana, "メイリオ", Meiryo, "Microsoft YaHei", STHeiti, sans-serif
$colorW1 = #FBFBFB
$colorW2 = #C9C9C9
$colorB1 = #0F0F0F
$colorB2 = #2E2E2E

$sideMenuTextColor = $colorW2
$globalMinWidth = 768px
$sideMenuMarginRight = 10px
$sideContainerWidth = 260px + $sideMenuMarginRight
$MainContainerMinWidth = $globalMinWidth - $sideContainerWidth

div,p,h1
  margin:0
  padding:0

html,body
  margin:0
  padding:0
  height: 100%
  
body
  text-align: center
  font: 10px $contentFont
  color: $colorB1
  a
    //cursor: url('/images/icon/location-arrow-outline.svg'), pointer

.grand-container
  display: inline-block
  width: 100%
  min-width: $globalMinWidth
  height: 100%
  max-height: 100% !important
  min-height: 100% !important
  background-color: $colorW1
  vertical-align: middle
  .verticaler
    display: inline-block
    vertical-align: middle
    height: 100%
    
.side-container
  float: left
  position: relative
  width: $sideContainerWidth
  height: 100%
  text-align: right

#logo
  margin: 50px $sideMenuMarginRight 50px 0
  a
    font-size: 2em
    line-height: 2em
    color: inherit
    text-decoration: none
        
#side-menu
  ul
    margin: 0
    padding: 0
    margin-left: 10px
    list-style-type: none
    li
      line-height: 1.6em
      margin-bottom: 5px
    li a
      display:block
      width: auto
      padding: 2px $sideMenuMarginRight 2px 0

      font-size: 1.4em
      text-decoration: none
      color: $sideMenuTextColor
      &:hover
        color: $colorB2
    li.selected a
      color: $colorB2
    li.bio
      margin-top: 25px
  
.main-container
  position: relative
  min-width: $MainContainerMinWidth
  margin-left: $sideContainerWidth
  height: 100%
  text-align: left
  
/*
 * assistant css
 */
.clearfix:after
  content: "."
  visibility: hidden
  display: block
  height: 0
  clear: both

/*
 * no data
 */
.no-data
  vertical-align: middle
  display: inline-block
  width: 100%
  text-align: center
  font-size: 5em
  color: $colorB2
  opacity: 0.5

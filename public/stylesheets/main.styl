@import 'includes/global'

.gallery
  display: block
  position: relative
  overflow: hidden
  width: 100%
  height: auto !important
  max-height: 100%
  min-height: 100%
  .photo
    z-index: 10
    position: absolute
    left: 50%
    transform: translate(-50%, 0)
    -webkit-transform: translate(-50%, 0)
    -ms-transform: translate(-50%, 0)
    overflow: hidden
    height: 100%
    .spin-container
      position: absolute
      display: inline-block
      z-index: -1
      background-color: $colorW1
      opacity: 0.7
    img
      width: 100%
      cursor: none
    .photo-count
      position: absolute
      font-size: 1.2em
      text-align: center
      padding: 5px 0
  .go-left
    z-index: 0
    float: left
    position: relative
    display: block
    width: 50%
    height: 100%
    cursor: url('/images/icon/chevron-left-outline.svg'), w-resize
  .go-right
    z-index:0
    float: right
    position: relative
    display: block
    width: 50%
    height: 100%
    cursor: url('/images/icon/chevron-right-outline.svg'), e-resize
  
/*
 * bio panel
 */
.bio-content
  max-height:100%
  overflow-y: auto
  margin-left: 10px
     
.bio-title
  display: inline-block
  margin: 50px 0 50px 0
  font-size: 2em
  font-weight: 600
  line-height: 2em
  
.bio-contact
  font-size: 1.4em

.bio-info
  max-width: 468px
  margin-top: 30px
  white-space: pre-line
  font-size: 1.2em
